<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>
	</head>
	<body style="    background: aquamarine;
    display: flex;
    flex-direction: column;
    align-content: space-around;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: stretch; margin-top: 15%;">
		<h1 style="    background-color: darkgrey;
		display: inline-flex;
		flex-wrap: wrap;
		flex-direction: column;
		align-items: center;">Registration</h1>
		<form id="reg-form" style="
		display: inline-flex;
		flex-wrap: wrap;
		flex-direction: column;
		align-items: flex-end;">
			<input type="text" autocomplete="off" id="username" placeholder="Username" style="
			    border: 15px solid #432e4e;
    border-radius: 50px ; margin-bottom: 2%;" />
			<input type="password" autocomplete="off" id="password" placeholder="Password" style=" 
			    border: 15px solid #432e4e;
    border-radius: 50px; margin-top: 3%;margin-bottom: 2%;" />
			<input type="submit" value="Submit Form" />
		</form>
        <div style="display: flex;flex-direction:row;">
			<p>already a user!!</p>
		<a href="/login" style="
		    color: #5b1368; margin-top: 8%;
    padding-left: 5px;text-decoration: solid;">login</a>
		</div>
		<script>
			const form = document.getElementById('reg-form')
			form.addEventListener('submit', registerUser)

			async function registerUser(event) {
				event.preventDefault()
				const username = document.getElementById('username').value
				const password = document.getElementById('password').value

				const result = await fetch('/api/register', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({
						username,
						password
					})
				}).then((res) => res.json())

				if (result.status === 'ok') {
					// everythign went fine
					alert('Success')
				} else {
					alert(result.error)
				}
			}
		</script>
	</body>
</html>